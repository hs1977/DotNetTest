<UserControl x:Name="MySpinControl" x:Class="FirstCustomControl.SpinControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FirstCustomControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="150" Height="150" Loaded="SpinControl_Loaded">
	<UserControl.Resources>
		<Storyboard x:Key="SpinImageStoryBoard" AutoReverse="True"/>
	</UserControl.Resources>
	<Grid>
		<Border BorderBrush="Yellow" BorderThickness="5">
			<Image x:Name="imgDisplay" Stretch="Fill" Margin="8" Source="Limes.jpg"/>
		</Border>

	</Grid>
</UserControl>
